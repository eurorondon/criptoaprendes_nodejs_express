<style>
    body {
        background-color: black;
    }
</style>

{{>navbar}}

<div class="container p-4">
    <div class="row">

        <div class="col-md-4 mx-auto">
            <form action="/signin" method="POST" class="card card">
                <h3 class="text-center my-3">LogIn</h3>
                <img src="/img/50.png" alt="Logo Fazt" class="card-img-top mx-auto m-2 rounded-circle w-50" />
                <div class="card-body">

                    <label for="username">Write a Username:</label>
                    <input type="text" name="username" placeholder="Username" class="form-control mb-3" autofocus />

                    <label for="password">Write your Password:</label>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control mb-3" />
                    </div>
                    <button class="btn btn-primary btn-block">
                        Login
                    </button>

                </div>
            </form>

            {{! Link }}
            <p class="fs-5 text-center mt-3 text-white">No tienes cuenta? Registrate ya !
                <a href="/senal">Registrarme</a>
            </p>

        </div>
    </div>
</div>